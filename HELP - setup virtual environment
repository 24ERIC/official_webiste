pip install virtualenvwrapper

virtualenv <MyProjectEnvt>

source <MyProjectEnvtve>/bin/activate

deactivate # to deavtivate virtualenv

django-admin startproject <project_name>

cd <project_name>

python3 manage.py startapp myfirstapp

python3 manage.py runserver  # start server

# Connect Django and MongoDB Using Djongo
pip install djongo


